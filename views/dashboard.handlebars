<div class="post-list" id="post-list">
  <h3>Current Posts:</h3>
{{#if posts.length}}
  {{#each posts as |post|}}
  <div class="m-5 inline-block">
    <h3 class="post-list-item">
      <a href="/post/{{post.id}}">{{post.title}}</a>
      <button class="btn btn-sm btn-danger" data-id="{{project.id}}">DELETE</button>
    </h3>
  </div>
  {{/each}}
</div>
{{/if}}

<div class="display-flex justify-center">
  <a href="/create_post_form">
    <button class="btn btn-lg btn-primary">+ New Post</button>
  </a>  

<script src="/js/delete_post.js"></script>