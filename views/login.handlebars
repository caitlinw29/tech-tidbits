<div class="col-md-8 center">
  <h2 class="mt-5">Login</h2>

  <form class="form login-form mt-2" id="login-form">
    <div class="form-group">
      <label for="username-login">Username:</label>
      <input class="form-input" type="text" id="username-login" />
    </div>
    <div class="form-group">
      <label for="password-login">Password:</label>
      <input class="form-input" type="password" id="password-login" />
    </div>
    <div class="form-group">
      <button class="btn btn-primary inline" type="submit">Login</button>
      <p class="inline"><a href="/signup">Signup instead</a></p>
    </div>
  </form>
</div>

<script src="./js/login.js"></script>