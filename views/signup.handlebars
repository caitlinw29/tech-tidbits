<div class="col-md-8 center">
  <h2 class="mt-5">Signup</h2>

  <form class="form signup-form mt-2" id="signup-form">
    <div class="form-group">
      <label for="username-signup">Username:</label>
      <input class="form-input" type="text" id="username-signup" />
    </div>
    <div class="form-group">
      <label for="password-signup">Password:</label>
      <input class="form-input" type="password" id="password-signup" />
    </div>
    <div class="form-group">
      <button class="btn btn-primary inline" type="submit">Signup</button>
      <p class="inline"><a href="/login">Login instead</a></p>
    </div>
  </form>
</div>


<script src="./js/signup.js"></script>