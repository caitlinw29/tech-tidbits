<div class="card">
  <div class="card-header">
    <h2>Signup</h2>
  </div>
  <div class="card-contents">
    <form class="form signup-form" id="signup-form">
      <div class="form-group">
        <label for="username-signup">Username:</label>
        <input class="form-input" type="text" id="username-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary inline" type="submit">Signup</button>
        <p class="inline"><a href="/login">Login instead</a></p>
      </div>
    </form>
  </div>
</div>

<script src="./js/signup.js"></script>