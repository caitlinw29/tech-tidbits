<div class="card">
  <div class="card-header">
     <h3>Create a New Post:</h3>
  </div>
  <div class="card-contents">
    
    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-title">Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-contents">Contents:</label>
        <input class="form-input" type="text" id="post-contents" name="post-contents" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary w-100">Create</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/add_post.js"></script>
